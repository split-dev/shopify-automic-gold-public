{% case feature %}
    {% when 'box' %}
        <div class="molecule no--mobile-overlay product-feature-box">
            <div class="molecule__uhaul">
                <span class="visually-hidden">Video showing signature Automic Gold jewelry box</span>
                <div>
                    <video class="content lazy" loop muted autoplay playsinline>
                        <source data-src="//dfaankvzyirrl.cloudfront.net/website/shared/product-feature-box.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
            <div class="molecule__text product-feature-box__text">
                <h3 class="bold space-bottom-x025">Signature Box</h3>
                <p>
                    Our jewelry box is a miniature book - open the cover and discover all the fun things inside!
                    All Automic Gold packaging is <a href="//www.automicgold.com/pages/sustainability" target="_blank">100% recyclable</a>.
                </p>
            </div>
        </div>
    {% when 'three-backs' %}
        <div class="product-feature-backings">
            <div class="product-feature-backings__header">
                <h3 class="bold space-bottom-x025">
                    Backs
                </h3>
                <div class="product-feature-backings__description">
                    Stud earrings are offered with three back options.
                </div>
            </div>

            <div class="product-feature-backings__container">
                <div class="product-feature-backings__section">
                    <div class="product-feature-backings__explanation">
                        <h4>Standard Pushback</h4> / Our pick for the perfect backing - small and comfy.
                    </div>
                    <img
                        class="lazyload product-feature-backings__image"
                        data-srcset="
                            {{ 'product-feature--standard-pushbackings.jpg' | file_img_url: '150x119' }} 150w,
                            {{ 'product-feature--standard-pushbackings.jpg' | file_img_url: '240x190' }} 240w,
                            {{ 'product-feature--standard-pushbackings.jpg' | file_img_url: '300x285' }} 300w,
                            {{ 'product-feature--standard-pushbackings.jpg' | file_img_url: '360x285' }} 360w
                        "
                        sizes="
                            (max-width: 479px) calc((100vw - 30px) * .4),
                            (min-width: 480px) and (max-width: 767.98px) calc((100vw - 60px) * .4),
                            (min-width: 768px) 150px
                        "
                        alt="Automic Gold 14k Gold Standard Size Push Backing"
                    />
                </div>
                <div class="product-feature-backings__section">
                    <div class="product-feature-backings__explanation">
                        <h4>Large Pushback</h4> / Easiest to grip. Also works wonders for stretched piercings.
                    </div>
                    <img
                        class="lazyload product-feature-backings__image"
                        data-srcset="
                            {{ 'product-feature--large-pushbackings.jpg' | file_img_url: '150x119' }} 150w,
                            {{ 'product-feature--large-pushbackings.jpg' | file_img_url: '240x190' }} 240w,
                            {{ 'product-feature--large-pushbackings.jpg' | file_img_url: '300x285' }} 300w,
                            {{ 'product-feature--large-pushbackings.jpg' | file_img_url: '360x285' }} 360w
                        "
                        sizes="
                            (max-width: 479px) calc((100vw - 30px) * .4),
                            (min-width: 480px) and (max-width: 767.98px) calc((100vw - 60px) * .4),
                            (min-width: 768px) 150px
                        "
                        alt="Automic Gold 14k Gold Large Size Push Backing"
                    />
                </div>
                <div class="product-feature-backings__section">
                    <div class="product-feature-backings__explanation">
                        <h4>Screwbacks</h4> / Extra secure backs. For people who like to screw around.
                    </div>
                    <img
                        class="lazyload product-feature-backings__image"
                        data-srcset="
                            {{ 'product-feature--screwbacks.jpg' | file_img_url: '150x119' }} 150w,
                            {{ 'product-feature--screwbacks.jpg' | file_img_url: '240x190' }} 240w,
                            {{ 'product-feature--screwbacks.jpg' | file_img_url: '300x285' }} 300w,
                            {{ 'product-feature--screwbacks.jpg' | file_img_url: '360x285' }} 360w
