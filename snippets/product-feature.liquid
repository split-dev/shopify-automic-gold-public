    {% when 'wedding-engraving' %}
        <div class="product-feature-wedding-engraving molecule no--mobile-overlay molecule--reversed">
            <div class="molecule__uhaul">
                <span class="visually-hidden">Video showing engraving on Automic Gold wedding band</span>
                <div>
                    <video class="content lazy" loop muted autoplay playsinline>
