            "type": "header",
            "content": "Spacings (Mobile)"
        },
        {
            "type": "range",
            "id": "mt-m",
            "label": "Margin-top",
            "unit": "px",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 20
        },
        {
            "type": "range",
            "id": "mb-m",
            "label": "Margin-bottom",
            "unit": "px",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 20
        }
    ],
    "blocks": [
        {
            "name": "title",
            "type": "title",
            "settings": [
                {
                    "type": "text",
