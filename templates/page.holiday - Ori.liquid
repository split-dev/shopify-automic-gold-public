<style>
    .holiday-header {
        display: block;
        border-bottom: 1px solid #FFCC33;
    }

    .inner {
    z-index: 1;
    }

    .text__block {
        position: absolute;
        top: 20vh;
        left: 9vw;
        padding-bottom: 5vh;
    }

    .image__block img {
        width: 100vw;
        margin-bottom: -6px;
}

    .holiday-sets-container {
        border-top: 1px solid #FFCC33;
        padding-top: 6vh;
    }

    .holiday-sets-container div {
    text-align:center;
}

/* .holiday-sets-container {
  display: flex;
} */

/* nav .holiday-lineup {
  display: flex;
  flex-direction: row; 
}*/

.holiday-lineup ul {
    display: flex;
    flex-direction: row;
    list-style-type: none;
    margin: 0 0 0 0 !important;
  }
  
  /* @media screen and (min-width: 768px) {
    .holiday-lineup ul {
      flex-direction: column;
    }
  } */
  
  .holiday-lineup li {
    position: relative;
    padding: 0 .5vw 0 0;
  }
  
  .holiday-lineup img {
    object-fit: cover;
    width: 13rem;
    height: 18rem;
    min-width: 11rem; 
  }
  
  .holiday-lineup a {
    text-decoration: none;
    text-transform: uppercase;
  }
  
  .holiday-lineup h3 {
    position: absolute;
    top: 1.5rem;
    width: 92%;
    font-size: .8rem;
    text-align: center;
  }
  
  .holiday-lineup button {
    z-index: 1;
  }

@media(min-width: 768px){
        .holiday-header .text__block {
            top: calc(1.5rem + 3vw);
        }
}

    .holiday-header .text__block .inner h1 {
        font-size: 4rem;
    }

    #scrollNav {
        margin: 10px 0 10px 0;       
    }

    #scrollNav ul {
        display: flex;
        justify-content: space-between;
        flex-wrap: nowrap;
        list-style: none;
        margin-left: 0;
        text-align: left;
    }

    #scrollNav ul {
    padding-top: 10px}

    #scrollNav ul li {
        cursor: pointer;
        text-transform: uppercase;
        font-weight: 600;
        transition: all ease 300ms;
        text-align: center;
        flex: 0 0 50%;
        max-width: 50%;
    }

    #scrollNav ul li.active {
        color: #FFCC33;
    }

    @media(min-width: 768px){
        #scrollNav ul {
            max-width: 670px;
            margin: 0 auto;
        }

        #scrollNav ul li {
            flex: 0 0 25%;
            max-width: 25%;
        }

        #scrollNav ul li:hover {
            color: #FFCC33;
        }
    }

@media(min-width: 768px){
    .holiday-lineup ul {
        flex-wrap: wrap;
    }
}
    .holiday-lineup-card {
        margin: 0 0 0 0;
}


    section.holiday-section {
        position: relative;
    }

    section.holiday-section .decorative-snowflake {
        position: absolute;
        top: -150px;
    }

    section.holiday-section .decorative-curve {
        position: absolute;
        z-index: -1;
        top: 200px;
        left: -200px;
    }

    section.holiday-section .bundle-grid {
        display: flex;
        flex-wrap: wrap;
    }

    .bundle-grid .product-card-item {
        flex: 0 0 calc(50% - 5px);
        max-width: calc(50% - 5px);
        margin-right: 10px;
        margin-bottom: 10px;
    }

    {% comment %} @media(max-width: 767.98px){
        .bundle-grid .product-card-item:nth-child(even) {
            margin-right: 0;
        }
    }

    @media(min-width: 768px){
        .bundle-grid .product-card-item {
            flex: 0 0 calc(25% - 10px);
            max-width: calc(25% - 10px);
        }
    } {% endcomment %}

    section.holiday-section .see-more {
        display: block;
        color: #FFCC33;
    }

    .winter-scene {
        margin-top: -100px;
    }
    {% comment %} @media(min-width: 768px){
        .winter-scene {
            margin-top: -150px;
        }
    } {% endcomment %}

</style>

