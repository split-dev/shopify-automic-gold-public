{% assign sizes = '
    (max-width: 479px) calc((100vw - 30px) * 0.5),
    (min-width: 480px) and (max-width: 767.98px) calc((100vw - 60px) * 0.5),
    (min-width: 768px) and (max-width: 1199.98px) calc((100vw - 120px) * 0.5),
    (min-width: 1200px) calc((100vw - 180px) * 0.5)'
%}

{% comment %} <div class="no--mobile-padding">
    <nav class="collection-lineup">
        <ul>
            {% include 'collection-lineup', type: 'bracelets', tag: 'chain', name: 'Chains' %}
            {% include 'collection-lineup', type: 'bracelets', tag: 'letter', name: 'Letters' %}
            {% include 'collection-lineup', type: 'bracelets', tag: 'unique', name: 'Uniques' %}
